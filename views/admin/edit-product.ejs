<%- include('../partial/head.ejs') %>
<link rel="stylesheet" href="/css/products.css">
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
  <%- include('../partial/nav.ejs') %>

  <main>
    <form class="add-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>product<% } %>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<% if (editing) {  %><%= product[0].title %> <% } %>" />
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product[0].imageUrl %> <% } %>" />
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product[0].price %> <% } %>" />
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea rows='5' name="description" id="description"><% if (editing) { %><%= product[0].description %> <% } %>"</textarea>
      </div>
      <% if (editing) { %> 
        <input type="hidden" name="productId" value="<%= product.id %>">
      <% } %>
      <button class="btn btn-size" type="submit"><% if (editing) { %> edit product <% } else { %> add product <% } %></button>
    </form>
  </main>
<%- include('../partial/end.ejs') %>
